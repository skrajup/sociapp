<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous"> -->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/bootstrap-social.css">
    <link rel="stylesheet" href="css/styles.css">
    
    <title>sociapp</title>

    <style>
      .custom-header-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: center;
        flex-wrap: wrap;
        padding: 5px 10px;
        box-shadow: 0 1.5px 1px #ccc;
        background: linear-gradient(170deg, rgb(243, 243, 243) 50%, rgb(255, 255, 255) 50%);
      }
      .header-left-flex {
        display: flex;
        justify-content: space-around;
        align-items: center;
        gap: 10px;
      }
      .header-right-flex {
        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
      }
      .left-logo > img {
        width: 40px;
      }
      :is(.item1-search, .item2-chat) > a {
        color: rgb(0, 0, 0);
      }
    </style>
  </head>
  <body>  
    <%- include('contact-to-dev-popup')%>
    <div class="custom-container">
      <!-- header -->
      <!-- custom navbar -->
      <!-- flex container -->
      <div class="custom-header-flex">

        <!-- left flex container -->
        <div class="header-left-flex">
          <div class="left-logo">
            <img src="/images/sociapp_logo.png" alt="sociapp_logo">
          </div>
          <div class="right-brand">
            <a class="app-name-stylish" href="/dashboard">SociApp</a>
          </div>
        </div>

        <!-- right flex container -->
        <div class="header-right-flex">

          <div class="item1-search">
            <a href="/dashboard/search" class="me-md-2" type="button" title="search">
              <i class="fa-solid fa-magnifying-glass" style="font-size: x-large; vertical-align: middle;"></i>
            </a>
          </div>

          <div class="item2-chat">
            <a href="/dashboard/chat" class="me-md-2" type="button" title="chat">
              <i class="fa-regular fa-message" style="font-size: x-large; vertical-align: middle;"></i>
            </a>
          </div>

          <div class="item3-profile">
            <a href="/dashboard/profile" class="me-md-2" type="button" style="padding: 0;" title="profile">
              <% if(user.profilePic){ %>
                <img class="profile-img" src="<%=user.profilePic%>" style="width: 40px;" alt="user-img">
              <% }else{ %>
                <img class="profile-img" src="//www.gravatar.com/avatar/<%=user.emailHash%>?d=retro&s=35" alt="user-img">
              <% } %>
            </a>
          </div>

          <div class="item4-create-post">
            <a href="/dashboard/create" class="custom-btn blue-custom-btn me-md-2" type="button">Create post</a>
          </div>

          <div class="item5-sign-out">
            <a href="/sign-out" class="custom-btn red-custom-btn" type="button">Sign Out</a>
          </div>

        </div>

      </div>


      