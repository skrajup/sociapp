<%- include('partials/homepage-header') %>
      <%- include('partials/messages/success-failure')%>

      <div class="custom-flex">
        <div>
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
        <div>
          <form action="/signup" method="post">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="Pick a username">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="abc@def.ghi">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="password">
            </div>
            
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>
        </div>
      </div>

      

<%- include('partials/footer') %>